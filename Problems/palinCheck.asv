%%
% Function to Check if a string / word / number is a palindrome
% 


function palinCheck(str)
    str = lower(str);
    b= '';
    l = length(str);
    for i=1:l
        b = strcat(b,str(l));
        l = l-1;
    end
    
    if b == str
        res = true;
        fprintf('This is a palindrome')
    else
        res = false;
        fprintf('Not a palindrome')
    end
    
end


